{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@i18n/*": ["src/i18n/*"],
      "@content/*": ["src/content/*"]
    }
  },
  "include": ["src/**/*", "astro.config.mjs"]
}

---
import BaseLayout from '@layouts/BaseLayout.astro';
import ToolCard from '@components/ToolCard.astro';

const tools = [
  {
    id: 'demo-a',
    title: '示例工具 A',
    description: '聚焦文本与 Markdown 处理的占位符模块，演示离线渲染。',
    href: '#demo-a'
  },
  {
    id: 'demo-b',
    title: '示例工具 B',
    description: '以数值计算为主的工具壳，用于展示组件化结构。',
    href: '#demo-b'
  },
  {
    id: 'demo-c',
    title: '示例工具 C',
    description: '文件处理示例，强调所有操作仅在本地执行。',
    href: '#demo-c'
  }
];
---
<BaseLayout title="工具目录" description="浏览器本地运行的工具清单，含三个可扩展的占位符示例。">
  <section class="flex flex-col gap-6">
    <div class="flex flex-col gap-4">
      <h1 class="text-3xl font-semibold text-white md:text-4xl">工具目录</h1>
      <p class="max-w-2xl text-base text-slate-200">
        以下工具示例展示了如何在此启动模版中组织功能模块。
        每个模块均保持轻量、可测试，便于替换成实际工具。
      </p>
    </div>
    <div class="grid gap-6 md:grid-cols-3">
      {tools.map((tool) => (
        <div id={tool.id}>
          <ToolCard {...tool} />
        </div>
      ))}
    </div>
  </section>
</BaseLayout>

---
export const prerender = true;
export function getStaticPaths() {
  return ['en', 'zh'].map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const locale = (lang === 'zh' ? 'zh' : 'en') as 'zh' | 'en';
---
<!doctype html>
<html lang={locale === 'zh' ? 'zh-CN' : 'en'}>
  <head>
    <meta charset="utf-8" />
    <title>Home ({locale})</title>
  </head>
  <body>
    <h1>Home ({locale})</h1>
    <p>This is a minimal page to unblock the build.</p>
    <p><a href={`/${locale}/tools/`}>Tools</a> Â· <a href={`/${locale}/blog/`}>Blog</a></p>
  </body>
</html>

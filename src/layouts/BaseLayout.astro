---
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import PrivacyBanner from '@components/PrivacyBanner.astro';
import '../styles/global.css';

import type { Dictionary } from '@i18n';
import type { Locale } from '@i18n/config';
import { getLocaleFromUrl, getSwitchLocaleUrl } from '@i18n/utils';

interface Props {
  lang: Locale;
  dict: Dictionary;
  title?: string;
  description?: string;
  ogImage?: string;
  canonical?: string;
  noIndex?: boolean;
}

const {
  lang,
  dict,
  title,
  description,
  ogImage = '/icons/icon.svg',
  canonical,
  noIndex = false
} = Astro.props as Props;

const url = Astro.url;
const site = Astro.site ?? new URL(url.origin);
const relativePath = url.pathname.replace(/^\/(zh|en)/, '') || '/';

const pageTitle = title ? `${title} · ${dict.meta.siteName}` : dict.meta.defaultTitle;
const pageDescription = description ?? dict.meta.description;

const canonicalUrl = canonical ?? new URL(`/${lang}${relativePath}`, site).toString();
const hrefEn = new URL(getSwitchLocaleUrl(url, 'en'), site).toString();
const hrefZh = new URL(getSwitchLocaleUrl(url, 'zh'), site).toString();

const ogLocale = lang === 'zh' ? 'zh_CN' : 'en_US';
const htmlLang = lang === 'zh' ? 'zh-CN' : 'en';
const resolvedOgImage = Astro.site ? new URL(ogImage, Astro.site).href : ogImage;
---

<!DOCTYPE html>
<html lang={htmlLang} class="bg-slate-950">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.webmanifest" />

    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />

    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={resolvedOgImage} />
    <meta property="og:locale" content={ogLocale} />
    {canonicalUrl && <meta property="og:url" content={canonicalUrl} />}

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="theme-color" content="#0f172a" />

    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    <link rel="alternate" hreflang="en" href={hrefEn} />
    <link rel="alternate" hreflang="zh-CN" href={hrefZh} />
    <link rel="alternate" hreflang="x-default" href={hrefEn} />
    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    {/* 供页面向 <head> 注入额外内容 */}
    <slot name="head" />
  </head>

  <body class="flex min-h-screen flex-col text-slate-100">
    <PrivacyBanner dict={dict} />
    <Header lang={lang} dict={dict} path={url.pathname} />

    <main class="mx-auto flex w-full max-w-6xl flex-1 flex-col gap-12 py-12">
      <slot />
    </main>

    <Footer dict={dict} />

    <script is:inline>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker
            .register('/sw.js')
            .catch((error) => console.error('SW registration failed', error));
        });
      }
    </script>
  </body>
</html>

---
import type { Dictionary } from '../i18n';
import type { Locale } from '../i18n/config';
import { getLocaleFromUrl, getSwitchLocaleUrl } from '@i18n/utils';

interface Props {
  lang: Locale;
  dict: Dictionary;
  path: string;
}

const { lang, dict } = Astro.props;
const base = `/${lang}`;
const locale = getLocaleFromUrl(Astro.url);
const other = locale === 'en' ? 'zh' : 'en';
const switchHref = getSwitchLocaleUrl(Astro.url, other);
const switchLabel = other === 'en' ? 'English' : '简体中文';
---
<header class="site-header">
  <a href={base + '/'} class="site-header__logo">{dict.meta.siteName}</a>
  <nav aria-label="Primary" class="site-header__nav">
    <a class="site-header__nav-link" href={base + '/'}>{dict.nav.home}</a>
    <a class="site-header__nav-link" href={base + '/tools/'}>{dict.nav.tools}</a>
    <a class="site-header__nav-link" href={base + '/blog/'}>{dict.nav.blog}</a>
  </nav>
  <a class="lang-toggle" href={switchHref} lang={other} rel="nofollow">{switchLabel}</a>
</header>
<style>
  .site-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    padding: 1rem 0;
  }

  .site-header__logo {
    font-size: 1.25rem;
    font-weight: 700;
    text-decoration: none;
    color: inherit;
  }

  .site-header__nav {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex: 1;
  }

  .site-header__nav-link {
    text-decoration: none;
    color: inherit;
    font-weight: 500;
  }

  .site-header__nav-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 640px) {
    .site-header {
      flex-wrap: wrap;
      gap: 0.75rem;
    }

    .site-header__nav {
      order: 3;
      width: 100%;
      justify-content: flex-start;
    }
  }
</style>
